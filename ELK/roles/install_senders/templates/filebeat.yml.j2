#{% endfor %}
#----------------------------- Logstash output --------------------------------
{% for host in groups.logstash %}
output.logstash:
  hosts: ["{{ host }}:5044"]
{% endfor %}
#================================ Processors =====================================
# Configure processors to enhance or manipulate events generated by the beat.

processors:
  - add_host_metadata: ~
  - add_cloud_metadata: ~
